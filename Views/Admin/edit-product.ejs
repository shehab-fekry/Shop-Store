<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<%= editMode ? '/admin/edit-product' : '/admin/add-product' %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= product ? product.title : null %>">
            </div>
            <div class="form-control">
                <label for="imageURL">Image URL</label>
                <input type="text" name="imageURL" id="imageURL" value="<%= product ? product.imageURL : null %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= product ? product.price : null %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" ><%= product ? product.description : null %></textarea>
            </div>
            <input type="hidden" name="id" value="<%= product._id %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><%= editMode ? 'Edit Product' : 'Add Product' %></button>
        </form>
    </main>
</body>
</html>